test("main not main",
"""
int main(){
  assert(0);
  return 0;
}

//last function is always main
int real_main(){
  return 0;
}
""")

test("recursion 1",
"""int factorial(unsigned int i)
{
   if(i <= 1)
   {
      return 1;
   }
   return i * factorial(i - 1);
}
void main()
{
    assert(factorial(15) == 2004310016);
}
""")

test("recursion 2",
"""int fibonaci(int i)
{
   if(i == 0)
   {
      return 0;
   }
   if(i == 1)
   {
      return 1;
   }
   return fibonaci(i-1) + fibonaci(i-2);
}

void main()
{
   assert(fibonaci(9)==34);
}
""")

test_long_arithmetic()
