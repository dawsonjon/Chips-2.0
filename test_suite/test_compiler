test("double 21",
"""
typedef struct {double a; double b;} mystruct;
void main(){
    mystruct a;
    a.a = 2.0;
    a.b = 3.0;
    assert(a.a == 2.0);
    assert(a.b == 3.0);
    assert(a.a + a.b == 5.0);
}
"""
)
test("double 22",
"""
typedef struct {double a; double b;} mystruct;

void test(mystruct a){
    assert(a.a == 2.0);
    assert(a.b == 3.0);
    assert(a.a + a.b == 5.0);
}

void main(){
    mystruct a;
    a.a = 2.0;
    a.b = 3.0;
    test(a);
}
"""
)

test("double 23",
