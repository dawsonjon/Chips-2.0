test("report 6",
"""
void main(){
    double a = 123.0;
    report(a);
}
""", 
check_output = "123.0")

test("report 7",
"""
void main(){
    float a = 0.0;
    report(a);
}
""",
check_output = "0.0")

test("report 8",
"""
void main(){
    double a = 0.0 * -1.0;
    report(a);
}
""",
check_output = "-0.0")

