test("inplace double 2",
"""
void main(){
    double test = 1.0;
    test += 2.0;
    assert(test == 3.0);
    test += 2.0;
    assert(test == 5.0);
    test += 2.0;
    assert(test == 7.0);
}
"""
)

test("inplace double 3",
"""
void main(){
    double test = 1.0;
    test -= 2.0;
    assert(test == -1.0);
    test -= 2.0;
    assert(test == -3.0);
    test -= 2.0;
    assert(test == -5.0);
}
"""
)

