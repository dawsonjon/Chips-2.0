"""
int myfunction(){
  return 0;
}
int main(){
  int a = 12;
  myfunction()=10;
  return 0;
}
""")

test_fails("error 12",
"""

typedef struct {long int a; int b;} struct_1;
typedef struct {long int a; struct_1 b;} mystruct;

void test(mystruct my){
    assert(mystruct.a == 1);
    assert(mystruct.b.a == 2);
    assert(mystruct.b.b == 3);
}

void main(){
    mystruct blah;
    blah.a = 1;
    blah.b.a = 2;
    blah.b.b = 3;
    test(blah);
}
"""
)

