test("float 21",
"""
typedef struct {float a; float b;} mystruct;
void main(){
    mystruct a;
    a.a = 2.0f;
    a.b = 3.0f;
    assert(a.a == 2.0f);
    assert(a.b == 3.0f);
    assert(a.a + a.b == 5.0f);
}
"""
)
test("float 22",
"""
typedef struct {float a; float b;} mystruct;

void test(mystruct a){
    assert(a.a == 2.0f);
    assert(a.b == 3.0f);
    assert(a.a + a.b == 5.0f);
}

void main(){
    mystruct a;
    a.a = 2.0f;
    a.b = 3.0f;
    test(a);
}
"""
)

test("float 23",
"""
void test(float b){
    assert(b/6.0f == 2.0f);
}

void main(){
    int a = 12.0f;
    test(a);
}
"""
)

